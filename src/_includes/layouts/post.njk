---
layout: layouts/base.njk
---

<div class="container mx-auto px-4 py-8">
  <!-- Article Header -->
  <article class="max-w-4xl mx-auto">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">{{ title }}</h1>

      {% if description %}
      <p class="text-xl text-base-content/70 mb-6">{{ description }}</p>
      {% endif %}

      <div class="flex justify-center items-center gap-4 text-sm text-base-content/60">
        {% if date %}
        <time datetime="{{ date | htmlDateString }}">{{ date | dateDisplay }}</time>
        {% endif %}

        {% if tags and tags.length > 0 %}
        <span>•</span>
        <div class="flex gap-2 flex-wrap justify-center">
          {% for tag in tags %}
          <span class="badge badge-outline badge-sm">{{ tag }}</span>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg max-w-none mb-12">
      {{ content | safe }}
    </div>

    <!-- Article Footer -->
    <footer class="border-t border-base-300 pt-8">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-sm text-base-content/60">
            Published on {{ date | dateDisplay }}
          </p>
        </div>
        <div class="flex gap-2"> <a href="{{ '/pages/posts/' | url }}" class="btn btn-outline btn-sm">← All Posts</a>
          <a href="mailto:vince@vincearter.com?subject=Re: {{ title }}" class="btn btn-primary btn-sm">Discuss</a>
        </div>
      </div>
    </footer>
  </article>
</div>