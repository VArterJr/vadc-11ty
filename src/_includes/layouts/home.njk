---
layout: layouts/base.njk
---

<!-- Hero Section -->
<div class="hero min-h-[70vh] bg-gradient-to-br from-primary/20 to-secondary/20">
  <div class="hero-content text-center w-full">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl font-bold mb-4">{{ title or "Welcome to VinceArter.com" }}</h1>
      <p class="text-lg mb-6 opacity-70">{{ description or "Personal website and portfolio of Vincent Lee Arter, Jr." }}
      </p>
      <!-- Content Area -->
      <div class="prose prose-lg max-w-none mx-auto">
        {{ content | safe }}
      </div>
    </div>
  </div>
</div>

<!-- Quick Links Section -->
<div class="container mx-auto px-4">
  <h2 class="text-3xl font-bold text-center mb-12">Explore My Work</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Tech Projects Card -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
          Tech Projects
        </h3>
        <p>Explore my technical projects and development work.</p>
        <div class="card-actions justify-end">
          <a href="{{ '/pages/tech/' | url }}" class="btn btn-primary btn-sm">View Projects</a>
        </div>
      </div>
    </div>

    <!-- Blog Posts Card -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z">
            </path>
          </svg>
          Latest Posts
        </h3>
        <p>Read my thoughts on technology, development, and more.</p>
        <div class="card-actions justify-end">
          <a href="{{ '/pages/posts/' | url }}" class="btn btn-primary btn-sm">Read Blog</a>
        </div>
      </div>
    </div>

    <!-- Media & Art Card -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3">
            </path>
          </svg>
          Media & Art
        </h3>
        <p>Discover my creative work in music, writing, and visual art.</p>
        <div class="card-actions justify-end">
          <a href="{{ '/pages/media/music/' | url }}" class="btn btn-primary btn-sm">Explore</a>
        </div>
      </div>
    </div>
  </div>
</div>